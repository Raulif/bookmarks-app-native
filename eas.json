{
  "cli": {
    "appVersionSource": "remote"
  },
  "build": {
    "base": {
      "android": {
        "image": "auto",
        "env": {
          "PLATFORM": "android"
        }
      },
      "ios": {
        "image": "auto",
        "env": {
          "PLATFORM": "ios"
        }
      }
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "android": {
        "distribution": "internal",
        "withoutCredentials": true
      }
    },
    "production": {
      "extends": "base",
      "env": {
        "ENVIRONMENT": "production"
      },
      "autoIncrement": true,
      "android": {
        "distribution": "internal",
        "withoutCredentials": true
      },
      "ios": {
        "distribution": "internal",
        "withoutCredentials": true
      }
    }
  }
}
